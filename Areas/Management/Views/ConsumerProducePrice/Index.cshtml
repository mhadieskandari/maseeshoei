@model IEnumerable<MaaseShooei.Areas.Management.Models.T_ConsumerProducePrices>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Management/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel-group">

    <div class="panel panel-primary">
        <div class="panel-heading"><span class="glyphicon glyphicon-list" aria-hidden="true"></span> لیست قیمت خریداران </div>

        <div class="panel-body">
            <p>
                <a href="@Url.Action("Create")" class="btn btn-success"><span class="glyphicon glyphicon-plus-sign"></span></a>
               @* @Html.ActionLink("ایجاد", "Create", "ConsumerProducePrice", null, new { @class = "btn btn-default" })*@
            </p>

            <div class="dataTables_wrapper">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead style="background-color:peru;">
                        <tr>
                            @*<th class="text-center">
                                    @Html.DisplayNameFor(model => model.ConsumerProducePriceID)
                                </th>*@
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model.T_Consumers._CompanyName)
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model._Date)
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model._Price)
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model._StateID)
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model.T_Produces._ProduceName)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.ConsumerProducePriceID)
                                    </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.T_Consumers._CompanyName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item._Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item._Price)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item._StateID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.T_Produces._ProduceName)
                                </td>
                                <td>
                                        @*@Html.ActionLink("ویرایش", "Edit", new { id = item._ConsumerProducePriceID }, new { @class = "btn btn-default" })
                                        @Html.ActionLink("جزئیات", "Details", new { id = item._ConsumerProducePriceID }, new { @class = "btn btn-default" })
                                        @Html.ActionLink("حذف", "Delete", new { id = item._ConsumerProducePriceID }, new { @class = "btn btn-danger" })
                                        @Html.ActionLink("فعال", "Active", new { id = item._ConsumerProducePriceID }, new { @class = "btn btn-success" })*@



                                    @if (User.IsInRole("Administrator") || User.IsInRole("User") || User.IsInRole("Accountant"))
                                    {
                                        <a href="@Url.Action("Edit", new { id = item._ConsumerProducePriceID })" class="btn btn-info"><span class="glyphicon glyphicon-edit"></span></a>
                                        <a href="@Url.Action("Details", new { id = item._ConsumerProducePriceID })" class="btn btn-primary"><span class="glyphicon glyphicon-eye-open"></span></a>
                                        <a href="@Url.Action("Delete", new { id = item._ConsumerProducePriceID })" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span></a>

                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>

    </div>

</div>

@section scripts{

    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>
}