                                @Html.DisplayFor(modelItem => item.T_Produces._ProduceName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.T_Producers._CompanyName)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item._Date)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item._Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item._State)
                            </td>
                            <td>
                                @*@Html.ActionLink("ویرایش", "Edit", new { id = item.ProducerProducePriceID }, new { @class = "btn btn-default" })
                                @Html.ActionLink("جزئیات", "Details", new { id = item.ProducerProducePriceID }, new { @class = "btn btn-default" })
                                @Html.ActionLink("حذف", "Delete", new { id = item.ProducerProducePriceID }, new { @class = "btn btn-danger" })*@

                                @if (User.IsInRole("Administrator") || User.IsInRole("User") || User.IsInRole("Accountant"))
                                {
                                    <a href="@Url.Action("Edit", new { id = item.ProducerProducePriceID })" class="btn btn-info"><span class="glyphicon glyphicon-edit"></span></a>
                                    <a href="@Url.Action("Details", new { id = item.ProducerProducePriceID })" class="btn btn-primary"><span class="glyphicon glyphicon-eye-open"></span></a>
                                    <a href="@Url.Action("Delete", new { id = item.ProducerProducePriceID })" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span></a>

                                }



                                @*@Html.ActionLink("فعال", "Active", new { id = item.ProducerProducePriceID }, new { @class = "btn btn-success" })*@
