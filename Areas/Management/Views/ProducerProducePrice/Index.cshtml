@model IEnumerable<MaaseShooei.Areas.Management.Models.T_ProducerProducePrices>

@{
    ViewBag.Title = "لیست قیمت تولید کنندگان";
   
    Layout = "~/Areas/Management/Views/Shared/_AdminLayout.cshtml";
}
<div class="panel-group">

