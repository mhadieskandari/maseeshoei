@model IEnumerable<MaaseShooei.Areas.Management.Models.T_Trucks>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Management/Views/Shared/_AdminLayout.cshtml";
}





<div class="panel-group">

    <div class="panel panel-primary">
        <div class="panel-heading"><span class="glyphicon glyphicon-list" aria-hidden="true"></span> لیست ماشین ها </div>

        <div class="panel-body">
            <p>
                @Html.ActionLink("ایجاد", "Create", "Truck", null, new { @class = "btn btn-default" })
            </p>

            <div class="dataTables_wrapper">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead style="background-color:peru;">
                        <tr>

                            <th class="text-center">
                                @Html.DisplayNameFor(model => model._Number)
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model._OwnerFullName)
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model._PhoneNumber)
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model._PureWeight)
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model._Descryption)
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model.T_State._StateName)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item._Number)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item._OwnerFullName)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item._PhoneNumber)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item._PureWeight)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item._Descryption)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.T_State._StateName)
                                </td>
                                <td>
                                    @Html.ActionLink("ویرایش", "Edit", new { id = item._TruckID }, new { @class = "btn btn-default" }) 
                                    @Html.ActionLink("جزئیات", "Details", new { id = item._TruckID }, new { @class = "btn btn-default" }) 
                                    @Html.ActionLink("حذف", "Delete", new { id = item._TruckID }, new { @class = "btn btn-default" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>

        </div>
    </div>
</div>



            @section scripts{

                <script>
                    $(document).ready(function () {
                        $('#dataTables-example').DataTable({
                            responsive: true
                        });
                    });
                </script>
            }
