                <div class="panel-heading">@Html.DisplayNameFor(model => model._PhoneNumber)</div>
                <div class="panel-body">@Html.DisplayFor(model => model._PhoneNumber)</div>
            </div>
            <div class="panel panel-primary">
                <div class="panel-heading">@Html.DisplayNameFor(model => model._Descryption)</div>
