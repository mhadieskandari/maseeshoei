        <div class="panel-body">

            <div class="panel panel-primary">
                <div class="panel-heading">@Html.DisplayNameFor(model => model._ProducerID)</div>
                <div class="panel-body">@Html.DisplayFor(model => model._ProducerID)</div>
            </div>
            <div class="panel panel-primary">
                <div class="panel-heading">@Html.DisplayNameFor(model => model._CompanyName)</div>
                <div class="panel-body">@Html.DisplayFor(model => model._CompanyName)</div>
            </div>
