@model MaaseShooei.Areas.Management.Models.Account

@{
    ViewBag.Title = "ورود به سیستم";
    Layout = "~/Areas/Management/Views/Shared/_SimpleLayout.cshtml";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)


<div class="container-fluid">
    <div class="header">
    <img src="~/Images/header.jpg" class="header-image" />




    </div>

    <div class="row" dir="rtl">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-primary" style="margin-top:20px;">
                <div class="panel-heading">
                    <h3 class="panel-title">ورود به سیستم</h3>
                </div>
                <div class="panel-body">
                    <div class="form-group ">
                        @Html.Label("انتخاب سال")
                        @Html.DropDownList("DBYear", (SelectList)(ViewBag.DBYear), new { @class = "dropdown" })
                        
                        @*<input class="form-control" placeholder="نام کاربری" name="UserName" type="text" autofocus>*@
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Username)
                        @Html.TextBoxFor(model => model.Username, new { @placeholder = "نام کاربری", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Username)
                        @*<input class="form-control" placeholder="نام کاربری" name="UserName" type="text" autofocus>*@
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Password)
                        @Html.PasswordFor(model => model.Password, new { @placeholder = "رمز عبور", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Password)
                        @* <input class="form-control" placeholder="رمزعبور" name="PassWord" type="password" value="">*@
                    </div>
                    <div class="checkbox">
                        <label>
                            @Html.CheckBoxFor(model => model.RememberMe)
                            @*<input name="RememberMe" type="checkbox">*@
                        </label>
                        <span>مرا به خاطر بسپار</span>
                    </div>
                    <div class="alert-danger">
                        <p>@ViewBag.err</p>
                    </div>
                    <!-- Change this to a button or input when using this as a form -->
                    <button class="btn btn-lg btn-success btn-block">ورود</button>
                </div>
            </div>
        </div>
    </div>
</div>


}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
