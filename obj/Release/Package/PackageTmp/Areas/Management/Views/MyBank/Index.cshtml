@model IEnumerable<MaaseShooei.Areas.Management.Models.T_BankMyAcount>

@{
    ViewBag.Title = "شماره حساب ها و بانک ها";
    Layout = "~/Areas/Management/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel-group">

    <div class="panel panel-primary">
        <div class="panel-heading"><span class="glyphicon glyphicon-list" aria-hidden="true"></span>شماره حساب ها و بانک ها</div>

        <div class="panel-body">
            <p>
            </p>
            <a href="@Url.Action("Create")" class="btn btn-success"><span class="glyphicon glyphicon-plus-sign"></span></a>

            <p>
            </p>
            <table class="table table-responsive table-striped table-bordered table-hover" id="dataTables-example">

                <thead style="background-color:peru;">
                    <tr>
                        <th class="text-center" hidden>
                            @Html.DisplayNameFor(model => model._BankId)
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model._BankName)
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model._AccountNumber)
                        </th>
                        <th></th>
                    </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center" hidden>
                                @Html.DisplayFor(modelItem => item._BankId)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item._BankName)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item._AccountNumber)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = item.BankId })" class="btn btn-info"><span class="glyphicon glyphicon-edit"></span></a>
                                @*<a href="@Url.Action("Details", new { id = item.BankID })" class="btn btn-primary"><span class="glyphicon glyphicon-zoom-in"></span></a>*@
                                <a href="@Url.Action("Delete", new { id = item.BankId })" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span></a>
   
                            </td>
                        </tr>
                    }

            </table>
        </div>
    </div>
</div>

@section scripts{

    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>
}