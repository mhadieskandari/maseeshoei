@model IEnumerable<MaaseShooei.Areas.Management.Models.T_Producers>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Management/Views/Shared/_AdminLayout.cshtml";
}



<div class="panel-group">

    <div class="panel panel-primary">
        <div class="panel-heading"><span class="glyphicon glyphicon-list" aria-hidden="true"></span>لیست تولیدکنندگان</div>

        <div class="panel-body">
            <p>
                <a href="@Url.Action("Create")" class="btn btn-success"><span class="glyphicon glyphicon-plus-sign"></span></a>
                @*@Html.ActionLink("ایجاد", "Create", "Producer", null, new { @class = "btn btn-default" })*@
            </p>

            <div class="dataTables_wrapper">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead style="background-color:peru;">
                        <tr>

                            <th class="text-center">
                                @Html.DisplayNameFor(model => model._CompanyName)
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model._OwnerFullName)
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model._Address)
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model._PhoneNumber)
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model._Descryption)
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model.T_State._StateName)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item._CompanyName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item._OwnerFullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item._Address)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item._PhoneNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item._Descryption)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.T_State._StateName)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = item.ProducerID })" class="btn btn-info"><span class="glyphicon glyphicon-edit"></span></a>
                                    <a href="@Url.Action("Details", new { id = item.ProducerID })" class="btn btn-primary"><span class="glyphicon glyphicon-zoom-in"></span></a>
                                    <a href="@Url.Action("Delete", new { id = item.ProducerID })" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span></a>

                                    @*@Html.ActionLink("ویرایش", "Edit", new { id = item.ProducerID }, new { @class = "btn btn-default" })
                                    @Html.ActionLink("جزئیات", "Details", new { id = item.ProducerID }, new { @class = "btn btn-default" })
                                    @Html.ActionLink("حذف", "Delete", new { id = item.ProducerID }, new { @class = "btn btn-default" })*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script>
                    $(document).ready(function () {
                        $('#dataTables-example').DataTable({
                            responsive: true
                        });
                    });
    </script>
}